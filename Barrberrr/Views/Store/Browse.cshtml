@model Barrberrr.Models.Genre
@{
    ViewBag.Title = "Browse Products";
    Layout = "~/Views/Shared/View.cshtml";
}
<div class="genre">
    <h3>
        <em>@Model.Name</em>Products
    </h3>
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details",new { id = product.ProductId })">
                    <img alt="@product.Title" src="@product.ProductArtUrl" />
                    <span>@product.Title</span>
                </a>
            </li>
        }
    </ul>
</div>
